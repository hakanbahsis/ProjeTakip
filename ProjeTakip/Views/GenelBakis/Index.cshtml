
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




    <div class="row">
        <div class="col-lg-8 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Proje Takip Sistemine Hoş Geldiniz.</h5>
                            <p class="mb-4">
                                Toplam<span class="fw-bold"> @ViewBag.ProjeSayisi</span> proje mevcuttur. Hepsini detaylı olarak inceleyebilirsiniz.
                            </p>

                            <a href="/PersonelProjeleri/Index/" class="btn btn-sm btn-outline-primary">Detaylı olarak gör.</a>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="~/tema//assets/img/illustrations/man-with-laptop-light.png"
                                 height="140"
                                 alt="View Badge User"
                                 data-app-dark-img="illustrations/man-with-laptop-dark.png"
                                 data-app-light-img="illustrations/man-with-laptop-light.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 order-1">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/tema//assets/img/icons/unicons/chart-success.png"
                                         alt="chart success"
                                         class="rounded" />
                                </div>
                               
                            </div>
                            <span class="fw-semibold d-block mb-1">Tamamlanan Projeler</span>
                            <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> @ViewBag.TamamlanmisProje Tamamlandı</small>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/tema//assets/img/icons/unicons/wallet-info.png"
                                         alt="Credit Card"
                                         class="rounded" />
                                </div>
                                
                            </div>
                            <span>Yüksek Öncelikli </span>
                            <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> @ViewBag.YuksekOncelikliProje Tamamlandı</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Total Revenue -->
        <div class="col-12 col-lg-8 order-2 order-md-3 order-lg-2 mb-4">
            <div class="card">
                <div class="row row-bordered g-0">
                    <div class="col-md-8">
                        <div class="card h-100">
                            <div class="card-header d-flex align-items-center justify-content-between pb-0">
                                <div class="card-title mb-0">
                                    <h5 class="m-0 me-2">Başarılı Proje İstatistik Alanı</h5>
                                    
                                </div>
                               
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="d-flex flex-column align-items-center gap-1">
                                        <h2 class="mb-2">@ViewBag.ProjeSayisi</h2>
                                        <span>Toplam Proje</span>
                                    </div>
                                    <div id="orderStatisticsChart"></div>
                                </div>
                                <ul class="p-0 m-0">
                                    <li class="d-flex mb-4 pb-1">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-primary">
                                                <i class="bx bx-mobile-alt"></i>
                                            </span>
                                        </div>
                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                            <div class="me-2">
                                                <h6 class="mb-0">Başarılı</h6>
                                                <small class="text-muted">Toplam Başarılı Proje Sayısı</small>
                                            </div>
                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.TamamlanmisProje</small>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="d-flex mb-4 pb-1">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-success"><i class="bx bx-closet"></i></span>
                                        </div>
                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                            <div class="me-2">
                                                <h6 class="mb-0">Yüksek Öncelikli</h6>
                                                <small class="text-muted">Toplam Yüksek Öncelikli Proje Sayısı</small>
                                            </div>
                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.BasariliVeYuksek</small>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="d-flex mb-4 pb-1">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-info"><i class="bx bx-home-alt"></i></span>
                                        </div>
                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                            <div class="me-2">
                                                <h6 class="mb-0">Orta Öncelikli</h6>
                                                <small class="text-muted">Toplam Orta Öncelikli Proje Sayısı</small>
                                            </div>
                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.BasariliVeOrta</small>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="d-flex">
                                        <div class="avatar flex-shrink-0 me-3">
                                            <span class="avatar-initial rounded bg-label-secondary">
                                                <i class="bx bx-football"></i>
                                            </span>
                                        </div>
                                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                            <div class="me-2">
                                                <h6 class="mb-0">Düşük Öncelikli</h6>
                                                <small class="text-muted">Toplam Düşük Öncelikli Proje Sayısı</small>
                                            </div>
                                            <div class="user-progress">
                                                <small class="fw-semibold">@ViewBag.BasariliVeDusuk</small>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card-body">
                            <div class="text-center">
                                
                            </div>
                        </div>
                        <div id="growthChart"></div>
                        <div class="text-center fw-semibold pt-3 mb-2">62% Toplam Proje</div>

                        <div class="d-flex px-xxl-4 px-lg-2 p-4 gap-xxl-3 gap-lg-1 gap-3 justify-content-between">
                            <div class="d-flex">
                                <div class="me-2">
                                    <span class="badge bg-label-primary p-2"><i class="bx bx-dollar text-primary"></i></span>
                                </div>
                                <div class="d-flex flex-column">
                                    <small>Tamamlanan Proje</small>
                                    <h6 class="mb-0">@ViewBag.TamamlanmisProje</h6>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="me-2">
                                    <span class="badge bg-label-info p-2"><i class="bx bx-wallet text-info"></i></span>
                                </div>
                                <div class="d-flex flex-column">
                                    <small>Devam Eden Proje</small>
                                    <h6 class="mb-0">@ViewBag.TamamlanmamisProje</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Total Revenue -->
        <div class="col-12 col-md-8 col-lg-4 order-3 order-md-2">
            <div class="row">
                <div class="col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/tema//assets/img/icons/unicons/paypal.png" alt="Credit Card" class="rounded" />
                                </div>
                             
                            </div>
                            <span class="d-block mb-1">Orta Öncelikli</span>
                            <small class="text-danger fw-semibold"><i class="bx bx-down-arrow-alt"></i> @ViewBag.OrtaOncelikliProje  Tamamlandı</small>
                        </div>
                    </div>
                </div>
                <div class="col-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title d-flex align-items-start justify-content-between">
                                <div class="avatar flex-shrink-0">
                                    <img src="~/tema//assets/img/icons/unicons/cc-primary.png" alt="Credit Card" class="rounded" />
                                </div>
                               
                            </div>
                            <span class="fw-semibold d-block mb-1">Düşük Öncelikli</span>
                            <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> @ViewBag.DusukOncelikliProje Tamamlandı</small>
                        </div>
                    </div>
                </div>
                <!-- </div>
                <div class="row"> -->
                <div class="col-12 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between flex-sm-row flex-column gap-3">
                                <div class="d-flex flex-sm-column flex-row align-items-start justify-content-between">
                                    <div class="card-title">
                                        <h5 class="text-nowrap mb-2">En Çok Proje Tamamlayan</h5>
                                        <span class="badge bg-label-warning rounded-pill">@ViewBag.EnCokTamamlayanPersonelBilgisi</span>
                                    </div>
                                    <div class="mt-sm-auto">
                                        <small class="text-success text-nowrap fw-semibold"><i class="bx bx-checkbox-square"></i> </small>
                                        <h3 class="mb-0">@ViewBag.EnCokProjeTamamlayanPersonelinProjeSayisi</h3>
                                    </div>
                                </div>
                                <div id="profileReportChart"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

